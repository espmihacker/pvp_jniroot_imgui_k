<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="false"
        android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#ffffff" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item
                android:left="4dp"
                android:top="6dp"
                android:right="4dp"
                android:bottom="6dp">
                <shape>
                    <solid android:color="#E523221E" />
                    <corners android:radius="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp">
                <shape>
                    <solid android:color="#FF5585D5" />
                    <corners android:radius="99dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp">
                <shape>
                    <solid android:color="#FF5585D5" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
